{
  "extends": "solium:all",
  "plugins": ["security"],
  "rules": {
    "imports-on-top": 0,
    "function-order": 0,
    "variable-declarations": "error",
    "arg-overflow": ["warning", 5],
    "indentation": ["error", 2],
    "quotes": ["error", "double"],
    "security/no-inline-assembly": 0,
    "security/no-call-value": 0,
    "security/no-block-members": 0,
    "no-experimental": 0
  }
}